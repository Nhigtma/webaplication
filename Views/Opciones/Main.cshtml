@model WebApplication1.Models.OpcionModel
@{
    ViewData["Title"] = "Opciones";
    Layout = "_Layout"; // Especifica el layout que vas a usar
}
@section Styles {
    <style>
        .container {
            display: flex;
        }
        .menu {
            width: 220px;
            border-right: 2px solid #ccc;
            padding: 20px;
            background-color: #fff;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }
        .menu h2 {
            margin-top: 0;
            font-size: 24px;
            color: #333;
        }
        .menu a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: #333;
            font-size: 18px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
        .menu a:hover {
            background-color: #007bff;
            color: #fff;
        }
        .content {
            margin-left: 240px;
            padding: 20px;
            flex: 1;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }
        .content h1 {
            font-size: 28px;
            margin-bottom: 10px;
            color: #007bff;
        }
        .content p {
            font-size: 16px;
            line-height: 1.5;
            color: #555;
        }
        .content img {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 10px 0;
        }
        .content ul {
            list-style-type: none;
            padding: 0;
        }
        .content li {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            background-color: #fafafa;
        }
        .content li:nth-child(even) {
            background-color: #f5f5f5;
        }
    </style>
}

<div class="container">
    <div class="menu">
        <h2>Opciones</h2>
        <a href="javascript:void(0);" onclick="updateContent('concepto')">Concepto de Lista</a>
        <a href="javascript:void(0);" onclick="updateContent('enlazada')">Lista Enlazada</a>
        <a href="javascript:void(0);" onclick="updateContent('doble')">Lista Doble Enlazada</a>
        <a href="javascript:void(0);" onclick="updateContent('circular')">Lista Circular</a>
    </div>
    <div class="content" id="content">
        @await Html.PartialAsync("_ContenidoParcial", Model) <!-- Renderiza la vista parcial aquÃ­ -->
    </div>
</div>

@section Scripts {
    <script>
        function updateContent(opcion) {
            const contentElement = document.getElementById('content');

            fetch(`/Opciones/Main?opcion=${opcion}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(html => {
                    contentElement.innerHTML = html; // Inserta solo el nuevo contenido
                })
                .catch(error => console.error('Error fetching content:', error));
        }
    </script>
}